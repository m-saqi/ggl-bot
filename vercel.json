{
  "version": 2,
  "builds": [
    {
      "src": "api/automate.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "lib/**",
          "public/**",
          "node_modules/**" 
        ]
      }
    }
  ],
  "functions": {
    "api/automate.js": {
      "maxDuration": 60,
      "memory": 1024 
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/automate",
      "dest": "/api/automate.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/automate.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
